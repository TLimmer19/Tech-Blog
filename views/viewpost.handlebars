<div class="card bg-light mb-3" style="max-width: 18rem;">
    <div class="card-header">{{Posts.title}}</div>
    <div class="card-body">
        <p class="card-text">{{Posts.post_text}}</p>
    </div>
</div>

<div class="container mt-3" id = "edit">
    <div class="card">
        <div class="card-header">
            <h3 class="myCardHeaderText">Comment</h3>
        </div>
        <div class="card-body">
            <form class='comment-form' data-id = "{{Posts.id}}">
                <div class="form-group">
                    <input type="text" class="form-control" id="blog-comment" placeholder="Enter Comment">
                </div>
                <button type="submit" class="btn btn-primary mt-2">Submit</button>
            </form>
        </div>
    </div>
</div>

{{> comment-details Posts.comments}}

<script src = "/js/comment.js"></script>